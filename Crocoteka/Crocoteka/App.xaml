<Application x:Class="Crocoteka.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Crocoteka"
             StartupUri="MainWindow.xaml"
             ShutdownMode="OnMainWindowClose"
             Startup="Application_Startup">

    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="TextBoxReadOnlyBackgroundBrush" Color="#FFF0F0F0" />

            <SolidColorBrush x:Key="SelectedListItemBackgroundBrush" Color="#FFCBE8F6" />

            <SolidColorBrush x:Key="MouseOverListItemBackgroundBrush" Color="AliceBlue" />

            <Color x:Key="FileNotFoundColor">Red</Color>
            
            <SolidColorBrush x:Key="FileNotFoundBrush" Color="{StaticResource FileNotFoundColor}" />
            
            <Style x:Key="ListBoxItemStyle" TargetType="ListBoxItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <Border Name="Border" Padding="2">
                                <ContentPresenter />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="Border" Property="Background"
                                            Value="{StaticResource SelectedListItemBackgroundBrush}" />
                                </Trigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsSelected" Value="False" />
                                        <Condition Property="IsMouseOver" Value="True" />
                                    </MultiTrigger.Conditions>
                                    <MultiTrigger.Setters>
                                        <Setter TargetName="Border" Property="Background"
                                                Value="{StaticResource MouseOverListItemBackgroundBrush}" />
                                    </MultiTrigger.Setters>
                                </MultiTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ListViewItemStyle" TargetType="ListViewItem">
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                <Setter Property="VerticalContentAlignment" Value="Top" />
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="{StaticResource SelectedListItemBackgroundBrush}" />
                    </Trigger>
                    <MultiTrigger>
                        <MultiTrigger.Conditions>
                            <Condition Property="IsSelected" Value="False" />
                            <Condition Property="IsMouseOver" Value="True" />
                        </MultiTrigger.Conditions>
                        <MultiTrigger.Setters>
                            <Setter Property="Background" Value="{StaticResource MouseOverListItemBackgroundBrush}" />
                        </MultiTrigger.Setters>
                    </MultiTrigger>
                </Style.Triggers>
            </Style>

            <DataTemplate x:Key="AuthorFullNameDataTemplate">
                <TextBlock Text="{Binding NameLastFirstMiddle}" />
            </DataTemplate>

            <DataTemplate x:Key="AuthorShortNameDataTemplate">
                <TextBlock Text="{Binding NameLastFirst}" ToolTip="{Binding NameLastFirstMiddle}" />
            </DataTemplate>

            <DataTemplate x:Key="CycleDataTemplate">
                <TextBlock Text="{Binding Title}" />
            </DataTemplate>

            <DataTemplate x:Key="GenreDataTemplate">
                <TextBlock Text="{Binding Title}" />
            </DataTemplate>

            <DataTemplate x:Key="FileDataTemplate">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Ellipse Grid.Row="0" Grid.Column="0" Height="8" Width="8" Fill="Black"
                             VerticalAlignment="Top"
                             Margin="4,4,4,0" />
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="FilenameTextBlock"
                               Text="{Binding Filename}"
                               TextWrapping="Wrap"
                               Margin="4,0,4,0" />
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="4,0,4,0">
                        <TextBlock Text="{Binding TypeText}"
                                   FontWeight="Bold" />
                        <TextBlock x:Name="CommentTextBlock"
                                   Text="{Binding Comment}"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
                <DataTemplate.Triggers>
                    <DataTrigger Binding="{Binding Path=Exists}" Value="False">
                        <Setter TargetName="FilenameTextBlock" Property="Foreground">
                            <Setter.Value>
                                <SolidColorBrush Color="{StaticResource FileNotFoundColor}" />
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Path=Comment}" Value="">
                        <Setter TargetName="CommentTextBlock" Property="Visibility" Value="Collapsed" />
                    </DataTrigger>
                </DataTemplate.Triggers>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
