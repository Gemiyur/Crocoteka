<Window x:Class="Crocoteka.Dialogs.FindFilesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crocoteka.Dialogs"
        mc:Ignorable="d"
        Title="Файлы книг"
        Width="700" Height="450" ResizeMode="CanResizeWithGrip"
        MinWidth="500" MinHeight="300"
        d:Width="500" d:Height="300"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded"
        Closed="Window_Closed">

    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="75" />
                <Setter Property="Height" Value="25" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Папка -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="FolderButton" Content="Папка"
                    Style="{StaticResource ButtonStyle}"
                    Margin="0,0,10,0"
                    Click="FolderButton_Click" />
            <TextBox Grid.Column="1" x:Name="FolderTextBox"
                     VerticalContentAlignment="Center"
                     IsReadOnly="True"
                     Background="{StaticResource TextBoxReadOnlyBackgroundBrush}" />
        </Grid>

        <!-- Фильтр -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <ComboBox Grid.Column="0" x:Name="TypeComboBox" Width="130"
                      SelectionChanged="TypeComboBox_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Key}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <CheckBox Grid.Column="1" x:Name="NotInLibraryCheckBox" Content="Нет в библиотеке"
                      VerticalAlignment="Center"
                      Margin="20,0,0,0"
                      Click="NotInLibraryCheckBox_Click" />
            <StackPanel Grid.Column="2" Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                <TextBlock Text="Найдено файлов:" Margin="0,0,0,0" />
                <TextBlock x:Name="CountTextBlock" Text="0" Margin="5,0,5,0" />
            </StackPanel>
        </Grid>

        <!-- Список файлов -->
        <ListBox Grid.Row="2" x:Name="FilesListBox"
                 SelectionChanged="FilesListBox_SelectionChanged">
            
        </ListBox>

        <!-- Кнопки -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="BookButton" Content="Книга"
                    Style="{StaticResource ButtonStyle}"
                    IsEnabled="False"
                    Click="BookButton_Click" />
            <Button Grid.Column="2" x:Name="CloseButton" Content="Закрыть"
                    Style="{StaticResource ButtonStyle}"
                    Click="CloseButton_Click" />
        </Grid>

    </Grid>
</Window>
