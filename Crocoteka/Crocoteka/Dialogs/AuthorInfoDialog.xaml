<Window x:Class="Crocoteka.Dialogs.AuthorInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crocoteka.Dialogs"
        mc:Ignorable="d"
        Title="Об авторе"
        Width="400" Height="350" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="NameTextBlock"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center" FontWeight="Bold" />

        <TextBox Grid.Row="2" x:Name="AboutTextBox"
                 TextWrapping="Wrap"
                 Padding="4,0,4,0"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True" />

        <Button Grid.Row="4" x:Name="CloseButton" Content="Закрыть"
                Width="75" Height="25"
                HorizontalAlignment="Right"
                IsCancel="True"
                Click="CloseButton_Click" />
    </Grid>
</Window>
