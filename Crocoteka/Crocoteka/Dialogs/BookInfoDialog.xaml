<Window x:Class="Crocoteka.Dialogs.BookInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crocoteka.Dialogs"
        mc:Ignorable="d"
        Title="О книге"
        Width="500" Height="500" ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="HyperlinkStyle" TargetType="Hyperlink">
                <Setter Property="TextDecorations" Value="None" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="TextDecorations" Value="Underline" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <TabItem Header="Книга">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Авторы -->
                    <TextBlock Grid.Row="0" x:Name="AuthorsTextBlock"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="8,8,8,0" />

                    <!-- Название -->
                    <TextBlock Grid.Row="1" x:Name="TitleTextBlock"
                               TextWrapping="Wrap"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="8,8,8,0" />

                    <!-- Серия и номер -->
                    <Grid Grid.Row="2" x:Name="CycleGrid" Margin="8,8,8,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Серия:" Margin="0,0,5,0" />
                            <TextBlock Grid.Column="1" x:Name="CycleTitleTextBlock" TextWrapping="Wrap" />
                        </Grid>
                        <StackPanel Grid.Row="1" x:Name="CycleNumberStackPanel" Orientation="Horizontal">
                            <TextBlock Text="Номер в серии:" Margin="0,0,5,0" />
                            <TextBlock x:Name="CycleNumberTextBlock" />
                        </StackPanel>
                    </Grid>

                    <!-- Аннотация -->
                    <GroupBox Grid.Row="3" Header="Аннотация" Margin="0,8,0,0">
                        <TextBox x:Name="AnnotationTextBox"
                                 BorderThickness="0"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 IsReadOnly="True"
                                 Margin="0,4,0,0" />
                    </GroupBox>

                    <!-- Жанры -->
                    <Grid Grid.Row="4" x:Name="GenresGrid" Margin="8,4,8,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Жанры:" Margin="0,0,5,0" />
                        <TextBlock Grid.Column="1" x:Name="GenresTextBlock" TextWrapping="Wrap" Text="Список жанров" />
                    </Grid>
                </Grid>
            </TabItem>
            
            <TabItem Header="Файлы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ListBox Grid.Row="0" x:Name="FilesListBox"
                             BorderThickness="0"
                             ItemContainerStyle="{StaticResource ListBoxItemStyle}"
                             ItemTemplate="{StaticResource FileDataTemplate}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             SelectionChanged="FilesListBox_SelectionChanged" />
                    <TextBlock Grid.Row="1" x:Name="FileNotFoundTextBlock" Text="*Файл не найден"
                               Foreground="{StaticResource FileNotFoundBrush}"
                               Margin="10,10,0,0" 
                               TextDecorations="OverLine"
                               Visibility="Collapsed" />
                </Grid>
            </TabItem>
        </TabControl>

        <Button Grid.Row="1" x:Name="CloseButton" Content="Закрыть"
                Width="75" Height="25"
                HorizontalAlignment="Right"
                Margin="0,10,0,0"
                Click="CloseButton_Click" />
    </Grid>
</Window>
